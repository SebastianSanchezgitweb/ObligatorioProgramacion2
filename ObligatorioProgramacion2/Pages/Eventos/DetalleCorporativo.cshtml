        <td>@Model.EventoCorporativoDetalle.CalcularCostoServicios()</td>
        </tr>

    


</table>




<table class="table table-bordered table-striped mt-4">
    <tr><th>ID</th><th>Tipo Servicio</th><th>Categoria</th><th>Costo</th><th>Proveedor</th> </tr>

    @foreach (ServiciosContratados servicios in Model.servicios)
    {
        <tr>
            <td>@servicios.IDServicios</td>
            <td>@servicios.TipoServicio</td>
            <td>@servicios.Categoria.NombreCategoria</td>
            <td>@servicios.Costo</td>
            <td>@servicios.Proveedor</td>



        </tr>

    }


</table>
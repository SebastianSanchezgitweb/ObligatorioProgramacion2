<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObligatorioProgramacion2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ObligatorioProgramacion2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    @if (Context.Session.GetInt32("IdEmpleado") != null)
                    {
                        <span class="fw-bold">
                            Bienvenido @Context.Session.GetString("NombreEmpleado")
                        </span>
                    }

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        

                       <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Eventos/ListaCliente">Cliente</a>
                        </li>

                        

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Eventos/ListadoEventos">Listado</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Eventos/FiltrarPorFechaYMonto">Periodo por fecha</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Eventos/Promedio">Promedio</a>
                        </li>
                                    
                    </ul>
                </div>
            </div>

            @if (Context.Session.GetInt32("IdEmpleado") != null)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-danger fw-bold" asp-page="/Eventos/Logout">
                            Cerrar sesión
                        </a>
                    </li>
                </ul>
            }

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }


            @RenderBody()
        </main>
    </div>

  

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ObligatorioProgramacion2 - <a asp-area="" asp-page="/Eventos/ListaCliente">Cliente</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>